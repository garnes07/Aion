@section myScripts{
<script>
    $(function () {
        var peakExists = $('#peakTimes').length;

        $('#standardSubmit').click(function () {
            if (peakExists) {
                $('#standardCheckModal').modal('show');
            }
            else {
                window.location.href = '/WFM/MyStore/NewOpeningTime';
            };
        });

        $('#chkYes').click(function () {
            window.location.href = '/WFM/MyStore/NewOpeningTime';
        });

        $('#chkNo').click(function () {
            $('#chkQ').toggle();
            $('#chkIncorrect').toggle();
        });
    });
</script>    
}