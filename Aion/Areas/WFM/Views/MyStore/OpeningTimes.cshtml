                                        <th class="text-center">Close</th>
                                        <th class="text-center">Open</th>
                                        <th class="text-center">Close</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PendingTimes)
                                    {
                                        <tr>
                                            <td>
                                                @(item.Status.Contains("Approval") ? "No" : "Yes")
                                            </td>
                                            <td colspan="2">
                                                @(item.EffectiveDate.ToShortDateString())
                                            </td>
                                            <td>
