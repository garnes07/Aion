@model Aion.Areas.WFM.ViewModels.Deployment.AvlbltySummaryVm

<div class="card">
    <div class="card-header text-center">
        <strong>My Team's Availability</strong>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-sm">
            <thead class="text-center">
                <tr>
                    <th style="width:40%;">Store</th>
                    <th style="width:20%;">Headcount</th>
                    <th style="width:20%;">Availability Up To Date</th>
                    <th style="width:20%;">%</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.areaCompletion)
                {
                    <tr>
                        <td><a href="@Url.Action("MenuSelect", "Profile", new {area = "", a = "S_" + item.StoreNumber})">@string.Format("{0} - {1}", item.StoreNumber, item.StoreName)</a></td>
                        <td class="text-center">@item.Headcount</td>
                        <td class="text-center">@item.AvlbltyUpToDate</td>
                        <td class="text-center @(item.AvlbltyUpToDate / item.Headcount < 0.9 ? "table-danger" : "table-success")">@string.Format("{0:0%}", item.AvlbltyUpToDate / item.Headcount)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
