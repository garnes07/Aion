@using Aion.ViewModels
@model Aion.Areas.WFM.ViewModels.Deployment.DashboardTrendVm

@{
    ViewBag.Title = "Dashboard Trend";
}

<div class="container-fluid">
    @if (Request.IsAuthenticated)
    {
        <div class="row justify-content-end mb-2">
            <div>
                @Html.Partial("~/Views/Shared/_selectMenu.cshtml")
            </div>
        </div>
    }
    <div class="card">
        <div class="card-header text-center">
            <strong>3 Month Trend</strong>
            @*<div class="col-4">
                <div class="row justify-content-end">
                    <label class="switch float-right">
                        <input type="checkbox" id="advView" />
                        <span class="slider round"></span>
                    </label>
                    <span class="float-right adv-label">Sort by Rank</span>
                </div>
            </div>*@
        </div>
        <div class="card-body">
            @if (Model.MessageType == MessageType.Error)
            {
                <div class="alert alert-warning text-center mt-3"><strong>@Model.Message</strong></div>
            }
            else
            {
                if (Model.DisplayLevel == 2)
                {
                    @Html.Partial("~/Areas/WFM/Views/Deployment/Partials/_DashTrendRegion.cshtml")
                }
            }
        </div>
    </div>
</div>