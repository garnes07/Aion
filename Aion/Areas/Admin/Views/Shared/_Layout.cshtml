<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>
    <link rel="shortcut icon" type="image/png" href="~/Images/favicon.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light fixed-top bg-light p-0" role="navigation">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <i class="icon ion ion-navicon-round"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="@Url.Action("Index", "OpeningTimes", new { area = "Admin" })">Pending Open Times</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="@Url.Action("NewsAndActions", "Content", new { area = "Admin" })">News/Actions</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="@Url.Action("Index", "DashboardMaintenance", new { area = "Admin" })">Maintain UK WFM Dashboard</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="@Url.Action("Index", "DashboardMaintenanceIE", new { area = "Admin" })">Maintain ROI WFM Dashboard</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="@Url.Action("Index", "UAC", new { area = "Admin" })">User Access Control</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @if (Request.IsAuthenticated)
    {
        <script>
        //session end
        var sessionTimeoutWarning = @Session.Timeout -1;

        var sTimeout = parseInt(sessionTimeoutWarning) * 60 * 1000;
        setTimeout('SessionEnd()', sTimeout);

        function SessionEnd() {
            window.location = "/Profile/Logoff";
        }
        </script>
    }
    @RenderSection("myScripts", false)
</body>
</html>