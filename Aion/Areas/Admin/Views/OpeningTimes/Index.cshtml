@model List<Aion.DAL.Entities.StoreOpeningTime>

@{
    ViewBag.Title = "Pending Times";
}

<div class="container-fluid">
    <h2>Approve Opening Times</h2>
    @if (Model.Count == 0)
    {
        <h4>No Pending Approvals!</h4>
    }
    else
    {
        <table class="table table-bordered table-sm text-center">
            <thead>
                <tr>
                    <td>Store Number</td>
                    <td>Date Submitted</td>
                    <td>Effective Date</td>
                    <td>Approve></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StoreNumber</td>
                        <td>@item.DateTimeSubmitted.ToShortDateString()</td>
                        <td>@item.EffectiveDate.ToShortDateString()</td>
                        <td><a href="@Url.Action("ReviewTime", "OpeningTimes", new { entryId = item.EntryID, storeId = item.StoreNumber })">Review</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>