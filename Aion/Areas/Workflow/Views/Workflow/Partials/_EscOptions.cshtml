@model List<Aion.Models.WebMaster.EscalationOptionsView>

@{
    bool first = true;
}

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#sendConfirm" data-action="@item.Level">@item.Description</a>
        if (first)
        {
            <div class="dropdown-divider"></div>
            first = !first;
        }
    }
}
else
{
    <a class="dropdown-item" href="#">Error...</a>
}

