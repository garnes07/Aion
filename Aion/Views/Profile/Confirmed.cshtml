
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/png" href="~/Images/favicon.png" />
    <title>Workforce Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-center">
                            Submission Received!
                        </h3>
                    </div>
                    <div class="card-body">
                        <p>
                            Thank you for your submission. Please allow up to <strong>24 hours</strong> for this to be processed before attempting to access the WFM homepage.
                        </p>
                        <p>
                            If you are still unable to access the site please escalate to <strong><u>STAR@cpwplc.com</u></strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
