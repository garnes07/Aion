@model Aion.Models.Utils.LoginVm

@{
    ViewBag.Title = "Login";
}

<div class="container">
    @if (ViewBag.SecureCheck != null)
    {
        <div class="row justify-content-center">
            <div class="alert alert-warning text-center w-75" role="alert">
                You are trying to access a restricted section. Please Log In.
            </div>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col col-xs-6 col-md-4">
            <div class="card">
                <div class="card-header">
                    Please Sign In
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Profile", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            @if (ViewBag.errorMessage != null)
                            {
                                <ul>
                                    <li class="text-danger">@ViewBag.errorMesage</li>
                                </ul>
                            }
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "UserName", autoFocus = "" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", value = "", type = "password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <input type="submit" value="Log In" class="btn btn-lg btn-success btn-block" />
                        </fieldset>
                    }
                    <br />
                    <p class="text-center">
                        If you experience problems logging in, please use the self service page <a href="https://passwordreset.cpwplc.com/passwordreset/" target="_blank"><strong><u>here</u></strong></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>